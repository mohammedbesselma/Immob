<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:id="@+id/loginlayout"
        android:background="@color/pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp"



        >
        <TextView
            android:id="@+id/logoimg"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/logo"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink2"
            android:text="IMMOB"
            android:textStyle="bold"
            android:textSize="16dp"

            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"


            >

            <EditText
                android:id="@+id/nom"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Nom"

                android:inputType="text" />

            <EditText
                android:id="@+id/prenom"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="PrÃ©nom"

                android:inputType="text" />

            <EditText
                android:id="@+id/email"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="E-mail"

                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/motpass"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:layout_margin="10dp"

                />

            <Button
                android:id="@+id/registerb"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bouton1"
                android:drawableRight="@drawable/ic_beenhere_black_24dp"

                android:padding="15dp"
                android:text="Inscrir"
                android:textColor="#fff"

                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>